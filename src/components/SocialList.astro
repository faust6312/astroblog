    /* 添加一些CSS优化 */
    .icon-container {
        display: flex;
        align-items: center;
        justify-content: center;
        min-width: 24px;
        min-height: 24px;
    }
    
    /* 确保SVG不会引起布局偏移 */
    .icon-container img,
    .icon-container svg {
        width: 100%;
        height: 100%;
        transition: opacity 0.2s ease-in-out;
    }
</style>
